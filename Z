public class ZPattern {
    public static void main(String[] args) {
        // Define the size (n x n grid)
        int size = 7; 

        // Outer loop for rows
        for (int i = 0; i < size; i++) {
            // Inner loop for columns
            for (int j = 0; j < size; j++) {
                
                // Condition for the Top and Bottom horizontal 
                // i == 0 is the top row
                // i == size - 1 is the bottom row
                if (i == 0 || i == size - 1) {
                    System.out.print("*");
                }
                
                // Condition for the Diagonal line
                // The diagonal for Z is where the row index (i) plus the column index (j) 
                // equals the grid size minus 1 (size - 1). This runs from top-right to bottom-left.
                else if (i + j == size - 1) {
                    System.out.print("*");
                }
                
                // Print a space for all other positions
                else {
                    System.out.print(" ");
                }
            }
            // Move to the next line after finishing a row
            System.out.println();
        }
    }
}